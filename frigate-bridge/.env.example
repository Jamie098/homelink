# Frigate Configuration
FRIGATE_URL=http://localhost:5000
FRIGATE_TIMEOUT=30s

# HomeLink Configuration
HOMELINK_URL=http://localhost:8081
HOMELINK_API_KEY=your-api-key-here
HOMELINK_TIMEOUT=30s

# Bridge Configuration
BRIDGE_ID=frigate-bridge
POLL_INTERVAL=5s

# Event Filtering
# Comma-separated list of enabled cameras (empty = all cameras)
ENABLED_CAMERAS=

# Comma-separated list of enabled event types (empty = all types)
ENABLED_EVENT_TYPES=person,car,bicycle,dog,cat

# Minimum confidence threshold (0.0 to 1.0)
MIN_CONFIDENCE=0.7

# Advanced Options
MAX_EVENT_AGE=10m
EVENT_BUFFER=100
RETRY_ATTEMPTS=3
RETRY_DELAY=5s
LOG_LEVEL=INFO
HEALTH_CHECK_PORT=8082